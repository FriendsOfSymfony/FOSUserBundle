<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="fos_user.user_creator" class="FOS\UserBundle\UserCreator">
            <argument type="service" id="fos_user.user_manager" />
            <argument type="service" id="security.acl.provider" on-invalid="ignore" />
        </service>
        <service id="fos_user.user_password_changer" class="FOS\UserBundle\UserPasswordChanger">
            <argument type="service" id="fos_user.user_manager" />
        </service>
    </services>

</container>
