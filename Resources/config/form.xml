<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="fos_user.form.profile" factory-method="getForm" factory-service="fos_user.form_builder.profile" class="Symfony\Component\Form\Form" />

        <service id="fos_user.form_builder.profile" factory-method="createBuilder" factory-service="form.factory" class="Symfony\Component\Form\FormBuilder">
            <argument type="service" id="fos_user.form.type.profile" />
            <argument />
            <argument type="collection">
                <argument key="data_class">%fos_user.model.user.class%</argument>
                <argument key="validation_groups">%fos_user.form.profile.validation_groups%</argument>
            </argument>
            <call method="addEventSubscriber">
                <argument type="service" id="fos_user.form.listener.user_canonical_fields" />
            </call>
        </service>

        <service id="fos_user.form.listener.user_canonical_fields" class="FOS\UserBundle\Form\UpdateCanonicalFieldsListener" public="false">
            <argument type="service" id="fos_user.user_manager" />
        </service>

        <service id="fos_user.form.type.profile" class="%fos_user.form.type.profile.class%">
            <argument>%fos_user.form.profile.name%</argument>
            <argument type="collection">
                <argument key="theme">%fos_user.template.theme%</argument>
            </argument>
            <tag name="form.type" />
        </service>

        <service id="fos_user.form.handler.profile" class="%fos_user.form.handler.profile.class%" scope="request">
            <argument type="service" id="fos_user.form.profile" />
            <argument type="service" id="request" />
            <argument type="service" id="fos_user.user_manager" />
        </service>

        <service id="fos_user.form.registration" factory-method="getForm" factory-service="fos_user.form_builder.registration" class="Symfony\Component\Form\Form" />

        <service id="fos_user.form_builder.registration" factory-method="createBuilder" factory-service="form.factory" class="Symfony\Component\Form\FormBuilder">
            <argument type="service" id="fos_user.form.type.registration" />
            <argument />
            <argument type="collection">
                <argument key="data_class">%fos_user.model.user.class%</argument>
                <argument key="validation_groups">%fos_user.form.registration.validation_groups%</argument>
            </argument>
            <call method="addEventSubscriber">
                <argument type="service" id="fos_user.form.listener.user_canonical_fields" />
            </call>
        </service>

        <service id="fos_user.form.type.registration" class="%fos_user.form.type.registration.class%">
            <argument>%fos_user.form.registration.name%</argument>
            <argument type="collection">
                <argument key="theme">%fos_user.template.theme%</argument>
            </argument>
            <tag name="form.type" />
        </service>

        <service id="fos_user.form.handler.registration" class="%fos_user.form.handler.registration.class%" scope="request">
            <argument type="service" id="fos_user.form.registration" />
            <argument type="service" id="request" />
            <argument type="service" id="fos_user.user_manager" />
        </service>

        <service id="fos_user.form.change_password" factory-method="create" factory-service="form.factory" class="%form.factory.class%">
            <argument type="service" id="fos_user.form.type.change_password" />
            <argument />
            <argument type="collection">
                <argument key="data_class">FOS\UserBundle\Form\ChangePassword</argument>
                <argument key="validation_groups">%fos_user.form.change_password.validation_groups%</argument>
            </argument>
        </service>

        <service id="fos_user.form.type.change_password" class="%fos_user.form.type.change_password.class%">
            <argument>%fos_user.form.change_password.name%</argument>
            <argument type="collection">
                <argument key="theme">%fos_user.template.theme%</argument>
            </argument>
            <tag name="form.type" />
        </service>

        <service id="fos_user.form.handler.change_password" class="%fos_user.form.handler.change_password.class%" scope="request">
            <argument type="service" id="fos_user.form.change_password" />
            <argument type="service" id="request" />
            <argument type="service" id="fos_user.user_manager" />
        </service>

        <service id="fos_user.form.reset_password" factory-method="create" factory-service="form.factory" class="%form.factory.class%">
            <argument type="service" id="fos_user.form.type.reset_password" />
            <argument />
            <argument type="collection">
                <argument key="data_class">FOS\UserBundle\Form\ResetPassword</argument>
                <argument key="validation_groups">%fos_user.form.reset_password.validation_groups%</argument>
            </argument>
        </service>

        <service id="fos_user.form.type.reset_password" class="%fos_user.form.type.reset_password.class%">
            <argument>%fos_user.form.reset_password.name%</argument>
            <argument type="collection">
                <argument key="theme">%fos_user.template.theme%</argument>
            </argument>
            <tag name="form.type" />
        </service>

        <service id="fos_user.form.handler.reset_password" class="%fos_user.form.handler.reset_password.class%" scope="request">
            <argument type="service" id="fos_user.form.reset_password" />
            <argument type="service" id="request" />
            <argument type="service" id="fos_user.user_manager" />
        </service>

    </services>

</container>
