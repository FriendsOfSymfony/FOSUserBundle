<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="fos_user.registration.form.factory" class="FOS\UserBundle\Form\Factory\FormFactory">
            <argument type="service" id="form.factory" />
            <argument>%fos_user.registration.form.name%</argument>
            <argument>%fos_user.registration.form.type%</argument>
            <argument>%fos_user.registration.form.validation_groups%</argument>
        </service>

        <service id="fos_user.registration.form.type" class="FOS\UserBundle\Form\Type\RegistrationFormType">
            <tag name="form.type" alias="fos_user_registration" />
            <argument>%fos_user.model.user.class%</argument>
        </service>

        <service id="fos_user.resend_confirm.form.factory" class="FOS\UserBundle\Form\Factory\FormFactory">
            <argument type="service" id="form.factory" />
            <argument>fos_user_resend_confirm_form</argument>
            <argument>fos_user_resend_confirm</argument>
            <argument type="collection">ResendConfirm</argument>
        </service>

        <service id="fos_user.resend_confirm.form.type" class="FOS\UserBundle\Form\Type\ResendConfirmFormType">
            <tag name="form.type" alias="fos_user_resend_confirm" />
            <argument>%fos_user.model.user.class%</argument>
        </service>

    </services>

</container>
